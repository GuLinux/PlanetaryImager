#!/bin/bash
set -e

if [ "${TRAVIS_OS_NAME}" == "linux" ]; then
    docker run -v $PWD:/code -v $PWD/build:/build --entrypoint cmake --name "planetary_imager_cmake" gulinux/planetaryimager_build:ubuntu-19.04-x86_64 -DCMAKE_BUILD_TYPE=Debug -DENABLE_PLANETARYIMAGER_TESTING=On /code 
    docker run -v $PWD:/code -v $PWD/build:/build --entrypoint make --name "planetary_imager_build" gulinux/planetaryimager_build:ubuntu-19.04-x86_64 -j4
fi
