FROM %{BASE_IMAGE}
RUN yum install -y     rpm-build     autoconf     automake     qt5-qtbase-devel     qt5-qtdeclarative-devel     gcc-c++     cmake     opencv-devel     boost-devel     git     libusb-devel     CCfits-devel     && yum clean all -y
WORKDIR /build
COPY configuration-%{CONFIG_NAME}.cmake /
COPY rpm-package-checker.sh /usr/local/bin/
ENV CMAKE_EXTRA_OPTIONS -DCMAKE_INCLUDE_EXT_FILE=/configuration-%{CONFIG_NAME}.cmake -DCPACK_GENERATOR=RPM
ENV TEST_PACKAGE_CMD="/usr/local/bin/rpm-package-checker.sh"
